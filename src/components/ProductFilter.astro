---
import { METAL, PLATING, PRODUCT } from "../utils/constants";
import { LinkUtils } from "../utils/coreUtils";
import CategoryFilter from "./CategoryFilter.astro";
import ProductFilterUnit from "./ProductFilterUnit.astro";
---

<ProductFilterUnit title="Product types">
    <CategoryFilter
        categories={PRODUCT.ALL_TYPES}
        generateLink={LinkUtils.generateSpecificProductTypeLink}
    />
</ProductFilterUnit>

<ProductFilterUnit title="Metal types">
    <CategoryFilter
        categories={METAL.ALL_TYPES}
        generateLink={LinkUtils.generateSpecificMetalTypeLink}
    />
</ProductFilterUnit>

<ProductFilterUnit title="Plating types">
    <CategoryFilter
        categories={PLATING.ALL_TYPES}
        generateLink={LinkUtils.generateSpecificPlatingTypeLink}
    />
</ProductFilterUnit>
