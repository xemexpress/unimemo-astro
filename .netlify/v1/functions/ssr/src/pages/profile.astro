---
import Layout from "../layouts/Layout.astro";
import H1 from "../components/H1.astro";
import Main from "../components/Main.astro";
import { ROUTES } from "../utils/routes";

const title = "Your Profile";
const description = "Welcome to your profile page. Share your ideas with us!";
---

<Layout title={title} description={description}>
    <Main>
        <div
            class="flex flex-col items-center justify-center min-h-[60vh] px-4 text-center"
        >
            <H1 title="Welcome Back" />
            <p class="mt-4 mb-8 text-lg text-gray-600 max-w-md">
                Have any ideas on how we can enhance our products or services?
                We'd love to hear from you!
            </p>
            <div class="space-y-4">
                <a
                    href={ROUTES.FEEDBACK}
                    class="inline-block bg-sky-600 text-white px-6 py-3 rounded-full text-base sm:text-lg hover:bg-sky-700 transition duration-300"
                >
                    Share Your Ideas
                </a>
                <form action="/api/logout.json" class="block">
                    <button
                        type="submit"
                        id="logoutBtn"
                        class="w-full bg-gray-200 text-gray-800 px-6 py-3 rounded-full text-base sm:text-lg hover:bg-gray-300 transition duration-300"
                    >
                        Logout
                    </button>
                </form>
            </div>
        </div>
    </Main>
</Layout>
